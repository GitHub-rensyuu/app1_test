<p style="color:green"><%= notice %></p>


<h1>Books</h1>



<!--Title,Bodyの表作成-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>


      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      　<!--詳細、編集のリンク、削除機能-->
      　<td><%= link_to "Show", book_path(book.id) %> <%= link_to "Edit", edit_book_path(book.id) %> <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      　</td>
      </tr>
   <% end %>
  </tbody>

</table>

<br>



<h3>New Book</h3>



<!-- form_with部分 -->
<%= form_with model: @book, url: "/books", method: :post do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <div class="errors" >
    <h4>Title</h4>
  </div>
    <!--title欄作成-->
    <%= f.text_field :title %>
  <div class="errors" >
    <h4>Body</h4>
  </div>
    <!--body欄作成-->
    <%= f.text_area :body %>
  <!--投稿ボタン作成-->
  <br><%= f.submit "Create Book" %>


<% end %>

